#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$result = "";

print_r("Welcome to the Brain Games!\nWhat number is missing in the progression?\n");

// ask name user
$name = BrainGames\Cli\run();

while (true) {
    // generate progression and correct answer
    $arrProgression = BrainGames\progressionGame\generateProgression();

    //ask question
    $userAnswer = BrainGames\progressionGame\askQuestion($arrProgression);

    //is correct answer?
    $compareAnswer = BrainGames\progressionGame\isCorrectAnswer($arrProgression, $userAnswer, $name);

    if ($compareAnswer == 1) {
      $result++;
    }

  // Congratulations
    if ($result == 3) {
      BrainGames\Cli\myCongratz($name);
    }
}
